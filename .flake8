[flake8]
max-line-length = 100
max-doc-length  = 100
docstring-convention = google
import-order-style   = google

ignore = E126, E127, E128, \  # Over- and under-indentation
         E741, E743, \        # Ambiguous variable names and function definitions
         W504, \              # Line break after binary operator
         D107, \              # Missing docstring in __init__
         D300, \              # Use double quotes for docstrings
         D417                 # A bug results in false positives
                              # TODO: Remove if pydocstyle gets updated

# Ignore missing docstring in public modules or functions
# Ignore too many leading '#' in examples for the custom examples generation
per-file-ignores = examples/*:D100,E266,E501,W505,
                   tests/*:D103

# Exclude the generated docs folder
exclude = public
